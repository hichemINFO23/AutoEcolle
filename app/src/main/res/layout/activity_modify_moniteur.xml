<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ModifyMoniteurActivity"
    android:background="@drawable/custom_edittext">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/editTextStudentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="اكتب نفس رقم التلميذ"
            android:inputType="number"/>

        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الاسم"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="اللقب"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editTextBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="تاريخ الميلاد"
            android:inputType="date"/>

        <EditText
            android:id="@+id/editTextNation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الجنسية"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="العنوان"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="رقم الهاتف"
            android:textAlignment="textEnd"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="البريد الالكتروني"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/editTextMatricule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="رقم تسجيل السيارة"
            android:inputType="number"/>
        <EditText
            android:id="@+id/editTextMarque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="شعار السيارة"
            android:inputType="text"/>
        <EditText
            android:id="@+id/editTextType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="نوع السيارة"
            android:inputType="text"/>

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="حفظ"
            android:background="@color/violet"/>

    </LinearLayout>
</ScrollView>
